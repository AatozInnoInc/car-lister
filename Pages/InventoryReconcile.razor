            isSaved = true;
            saveMessageType = "success";
            saveMessage = "Changes saved successfully.";
            // Keep the summary numbers stable after save
            CaptureSummarySnapshot();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            isSaving = false;
            Console.WriteLine($"Error applying changes: {ex.Message}");
            saveMessageType = "error";
