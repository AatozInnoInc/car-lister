                        // IMPORTANT: Update the EXISTING car to preserve all data (selected photos, etc.)
                        // Only update the metadata fields
                        if (!string.IsNullOrWhiteSpace(meta.ExteriorColor)) oldCar.ExteriorColor = meta.ExteriorColor;
